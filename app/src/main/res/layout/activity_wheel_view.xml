<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context="com.kakusummer.sample.viewCustom.WheelViewActivity">

        <!--normal还是白色好看 虽然对底色要求有点高 36个刻度/每个是10  计时/2 5分钟-->
        <com.assistant.viewcustom.horizontalwheelview.HorizontalWheelView
            android:id="@+id/horizontalWheelView"
            android:layout_width="200dp"
            android:layout_height="64dp"
            app:activeColor="#ffc107"
            app:marksCount="36"
            app:onlyPositiveValues="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:normalColor="@color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>