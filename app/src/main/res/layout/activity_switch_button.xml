<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="20dp">

        <com.assistant.viewcustom.switchbutton.SwitchButton
            android:id="@+id/switch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_1"
            android:layout_marginStart="16dp"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/switch_button"
            app:layout_constraintBottom_toBottomOf="@+id/switch_button"
            app:layout_constraintStart_toEndOf="@+id/switch_button" />

        <com.assistant.viewcustom.switchbutton.SwitchButton
            android:id="@+id/switch_button_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:sb_checked="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/switch_button" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_2"
            android:layout_marginHorizontal="16dp"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/switch_button_enable"
            app:layout_constraintBottom_toBottomOf="@+id/switch_button_enable"
            app:layout_constraintStart_toEndOf="@+id/switch_button_enable" />

        <com.assistant.viewcustom.switchbutton.SwitchButton
            android:id="@+id/switch_button_without_indication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:sb_show_indicator="false"
            app:sb_checked="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/switch_button_enable" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_3"
            android:layout_marginHorizontal="16dp"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/switch_button_without_indication"
            app:layout_constraintBottom_toBottomOf="@+id/switch_button_without_indication"
            app:layout_constraintStart_toEndOf="@+id/switch_button_without_indication" />

        <com.assistant.viewcustom.switchbutton.SwitchButton
            android:id="@+id/switch_button_changed_color_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:sb_checked_color="#fdc951"
            app:sb_checked="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/switch_button_without_indication" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_4"
            android:layout_marginHorizontal="16dp"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/switch_button_changed_color_background"
            app:layout_constraintBottom_toBottomOf="@+id/switch_button_changed_color_background"
            app:layout_constraintStart_toEndOf="@+id/switch_button_changed_color_background" />

        <com.assistant.viewcustom.switchbutton.SwitchButton
            android:id="@+id/switch_button_changed_color_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:sb_button_color="#db99c7"
            app:sb_shadow_color="#A36F95"
            app:sb_background="#FFF"
            app:sb_checkline_color="#a5dc88"
            app:sb_checked_color="#A36F95"
            app:sb_uncheckcircle_color="#A36F95"
            app:sb_uncheckbutton_color="#fdc951"
            app:sb_checkedbutton_color="#61d74f"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/switch_button_changed_color_background" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_5"
            android:layout_marginHorizontal="16dp"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/switch_button_changed_color_all"
            app:layout_constraintBottom_toBottomOf="@+id/switch_button_changed_color_all"
            app:layout_constraintStart_toEndOf="@+id/switch_button_changed_color_all" />

        <com.assistant.viewcustom.switchbutton.SwitchButton
            android:id="@+id/switch_button_without_swipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:sb_enable_effect="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/switch_button_changed_color_all" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_6"
            android:layout_marginHorizontal="16dp"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/switch_button_without_swipe"
            app:layout_constraintBottom_toBottomOf="@+id/switch_button_without_swipe"
            app:layout_constraintStart_toEndOf="@+id/switch_button_without_swipe" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
