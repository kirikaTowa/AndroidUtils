<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rl_dialog_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_50"
        android:background="@color/translucent"
        android:orientation="vertical">    <!-- 取消对话框按钮图标 -->


        <TextView
            android:id="@+id/tv_width"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="适配宽度"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent" />


        <com.assistant.viewcustom.progress.ProgressDigitalSeekBar
            android:id="@+id/pgs_width"
            android:layout_width="@dimen/dp_275"
            android:layout_height="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.481"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_width"
            app:sk_radiusRect="@dimen/dp_0" />

        <TextView
            android:id="@+id/tv_depth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:text="适配纵深感"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/pgs_width" />

        <com.assistant.viewcustom.progress.ProgressDigitalSeekBar
            android:id="@+id/pgs_depth"
            android:layout_width="@dimen/dp_275"
            android:layout_height="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.481"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_depth"
            app:sk_radiusRect="@dimen/dp_0" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>